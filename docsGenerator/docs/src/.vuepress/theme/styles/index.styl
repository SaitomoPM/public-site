// default from vuepress
.home .hero img
  max-width 450px!important

details:hover
  cursor: pointer

:root {
  --BgColor1: $bgColor;
  --BgColor2: $bgColor;
  --TextColor: $textColor
  --AccentColor: $accentColor
  --fontFamily: $Rubik
  --LineColor: $accentColor
  --LineThickness: 1px
  --PrefixColor: $textColor
  --BorderColor: $borderColor
  --InLineCodeBG: $bgColor
  --InLineCodeText: $textColor
  --LinkColor: $textColor
  }

.header-anchor
    color: var(--AccentColor)!important


// sets background for most items
html, body, .page, .theme-container, .links, header, .prefix
  background: var(--BgColor1)
  color: var(--TextColor)
  font-family: var(--fontFamily)

.sidebar, .sidebar-group, .sidebar-heading, nav, .navbar, .nav-dropdown, .is-sub-group
  background: var(--BgColor2)
  color: var(--TextColor)
  font-family: var(--fontFamily)

.amazingdiagram
   width: 40%
   height: auto
   display: block
   margin-left: auto
   margin-right: auto

.inline-table
  color: black !important
  display inline-table
  max-width 80%
  tr:nth-child(odd) {
    background-color: #d3d3d3
  }
  tr:nth-child(even) {
    background-color: #f2f2f2
  }

.inline-table a
  color: var(--LinkColor)
  text-decoration: underline

.caption
  text-align: center
  font-size: .75em

.footnote
  text-align: center
  font-size: .66em

code:not(pre code)
  background: var(--InLineCodeBG) !important
  color: var(--InLineCodeText) !important

h2
  border-bottom: 4px solid var(--LineColor)

.subHeaderGroupTitle
      color var(--TextColor) !important

p
  a  
    color:var(--LinkColor)
    text-decoration: underline
    &:hover
      color: var(--AccentColor)
      text-decoration: none !important

.page
  li
    a
      color:var(--LinkColor)
      text-decoration: underline
      &:hover
        color: var(--AccentColor)
        text-decoration: none !important

.align-left
  text-align: left 

.NotFound
  text-align: center
  margin-top: 10%
